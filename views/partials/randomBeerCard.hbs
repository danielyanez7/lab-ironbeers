<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{image_url}}" class="img-fluid rounded-start" alt="{{name}}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text"><small class="text-muted">{{tagline}}</small></p>
                <p class="card-text">{{description}}</p>
                <p class="card-text"> <span class="fw-bold">Food Pairing:</span> {{food_pairing}}</p>
                <p class="card-text"> <span class="fw-bold">Brewers tips:</span> {{brewers_tips}}</p>
            </div>
        </div>
    </div>
</div>